<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:id="@+id/item_list_sale"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoItemListSale"
                android:layout_width="match_parent"
                android:contentDescription="@string/app_name"
                android:layout_height="250dp"
                android:src="@mipmap/sale_empty_icon" />

            <TextView
                android:id="@+id/textViewNameSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#27496D"
                android:text="Producto" />

            <TextView
                android:id="@+id/textViewPriceSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="3dp"
                android:textSize="35sp"
                android:layout_marginEnd="15dp"
                android:textStyle="bold"
                android:textColor="#142850"
                android:text="Precio" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>